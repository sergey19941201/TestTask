<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Registration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="148.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:layout_gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:id="@+id/linearLayout2"
        android:background="#ffffff" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fNameET"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:hint="Enter your name"
        android:layout_marginTop="5dp" />
  <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lNameET"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:hint="Enter your surname"
        android:layout_marginTop="5dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailET"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:hint="Enter your email"
        android:layout_marginTop="5dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginET"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:hint="Enter your login"
        android:layout_marginTop="5dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordET"
        android:layout_marginRight="2dp"
        android:hint="Enter your password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />
      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/confirm_passwordET"
        android:layout_marginRight="2dp"
        android:hint="Confirm your password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="108.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="7dp">
        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/registerBN"
            android:gravity="center"
            android:layout_marginLeft="2dp" />
        <Button
            android:text="Отмена"
            android:layout_marginTop="50.5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/zakritFragmentBn"
            android:gravity="center"
            android:layout_marginRight="2dp" />
    </RelativeLayout>
</LinearLayout>